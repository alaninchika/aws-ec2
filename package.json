{
  "name": "aws-ec2",
  "version": "1.0.0",
  "description": "A microservice for AWS elastic compute cloud.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
  	"check-coverage": "npm test && node_modules/.bin/istanbul check-coverage --statements 100 --functions 100 --lines 100 --branches 100",
    "eslint": "semistandard  --verbose | snazzy",
    "test": "node tests/test.js"
  },
  "lambda_memory": 512,
  "lambda_timeout": 42,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alaninchika/aws-ec2.git"
  },
  "keywords": [
    "AWS",
    "Amazon",
    "Lambda",
    "EC2",
    "function",
    "api-gateway",
    "aws-lambda",
    "aws-ec2",
    "cloudformation",
    "microservice"
  ],
  "author": "Alan Koroma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alaninchika/aws-ec2/issues"
  },
  "homepage": "https://github.com/alaninchika/aws-ec2#readme",
  "devDependencies": {
    "aguid": "^2.0.0",
    "eslint": "^4.3.0",
    "git-rev": "^0.2.1",
    "istanbul": "^0.4.5",
    "sinon": "^1.17.2",
    "tape": "^4.2.2"
  },
  "dependencies": {
    "aws-sdk": "^2.149.0",
    "axios": "^0.16.2"
  },
  "semistandard": {
    "rules": {
      "no-multi-spaces": [
        2,
        {
          "exceptions": {
            "VariableDeclarator": true
          }
        }
      ],
      "brace-style": [
        2,
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "no-trailing-spaces": 0
    },
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "afterEach"
    ]
  },
  "pre-commit": [
    "eslint",
    "check-coverage"
  ]
}